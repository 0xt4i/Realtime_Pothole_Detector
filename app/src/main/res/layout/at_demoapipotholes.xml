<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_screenLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_background">

    <!-- Login Button -->
    <Button
        android:id="@+id/btn_getPotholes"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF5A29"
        android:layout_marginTop="200dp"
        android:text="get potholes"
        android:textColor="@color/color_word"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/add_ph"
        android:layout_width="wrap_content"
        android:layout_below="@id/btn_getPotholes"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:backgroundTint="#30F0"
        android:gravity="center"
        android:text="add pothole"
        android:textColor="@color/color_word"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_globalPotholes"
        android:layout_width='170dp'
        android:layout_below="@id/add_ph"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:backgroundTint="#30B0B0"
        android:gravity="center"
        android:text="get all"
        android:textColor="@color/color_word"
        android:textSize="22sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/add_distance"
        android:layout_width="wrap_content"
        android:layout_below="@id/get_globalPotholes"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:backgroundTint="#30F0"
        android:gravity="center"
        android:text="add distance"
        android:textColor="@color/color_word"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_distance"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/demo_deletePH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#c02dd6"
            android:gravity="center"
            android:text="delete pothole"
            android:textColor="@color/color_word"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/demo_edt_potholeid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_textbox"
            android:gravity="center_vertical"
            android:hint="Enter Pothole id"
            android:inputType="number"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColorHint="@color/opacity_black" />
    </LinearLayout>


</RelativeLayout>