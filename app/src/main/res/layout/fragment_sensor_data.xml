<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#4FABDF">
    <!--sensor data-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvdt_meanZ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="mZ: 0.000"
            android:textSize="12sp"
            android:padding="20dp"
            android:textColor="#AF1740" />
        <TextView
            android:id="@+id/tvdt_sdZ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sdZ: 0.000"
            android:textSize="12sp"
            android:padding="20dp"
            android:textColor="#31EF1E"/>
        <TextView
            android:id="@+id/tvdt_sensitive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="sensitivity: HIGH"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="20dp"
            android:textColor="#740938"/>
    </LinearLayout>

    <!--Time Data-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pothole found: "
            android:textSize="15sp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvdt_potholeFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="15sp"
            android:textColor="#cc1306"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
