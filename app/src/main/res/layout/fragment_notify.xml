<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentNotify">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardnotify"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="-10dp"
        android:backgroundTint="@color/pacificblue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Thông báo"
                android:textSize="16sp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightpacificblue"
                    app:cornerRadius="10dp"
                    android:text="Người dùng 1"
                    android:textSize="10sp"
                    android:textColor="@color/gray">
                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightpacificblue"
                    app:cornerRadius="10dp"
                    android:text="Người dùng 2"
                    android:textSize="10sp"
                    android:textColor="@color/gray">
                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightpacificblue"
                    app:cornerRadius="10dp"
                    android:text="Người dùng 3"
                    android:textSize="10sp"
                    android:textColor="@color/gray">
                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <ListView
        android:id="@+id/listnotify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardnotify"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical"
        tools:listitem="@layout/item_notify"
        android:dividerHeight="15dp"
        android:divider="@color/transparent">
    </ListView>

</RelativeLayout>